<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobisoft.mbswebplugin.MvpMbsWeb.MbsWebFragment">

    <com.mobisoft.mbswebplugin.refresh.SwipeRefreshLayout
        android:id="@+id/swrLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.mobisoft.mbswebplugin.MbsWeb.HybridWebView
            android:id="@+id/frag_web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:scrollbarSize="1dp"
            android:scrollbars="horizontal"
            android:layerType="software"
            android:anyDensity="true"
            android:largeScreens="true"
            android:normalScreens="true"
            android:resizeable="true"
            android:smallScreens="true"
            />

    </com.mobisoft.mbswebplugin.refresh.SwipeRefreshLayout>
</FrameLayout>
