    <Button
        android:id="@+id/btn_pull_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="弹窗！" />

    <Button
        android:id="@+id/btn_html"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_pull_sheet"
        android:text="网页测试页面" />

    <Button
        android:id="@+id/btn_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_html"
        android:text="定位测试页面" />

    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_location"
        android:text="下拉刷新测试页面" />

    <Button
        android:id="@+id/btn_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_refresh"
        android:text="下载cache.mainfest" />

    <Button
        android:id="@+id/btn_join_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_down"
        android:text="加入QQ讨论群！" />

    <Button
        android:id="@+id/btn_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_join_us"
        android:text="新测试页面！" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_new"
        android:text="权限注册广播！" />

    <com.mobisoft.searchlibrary.IconCenterEditText
        android:id="@+id/icet_search2"
        style="@style/StyleEditText"
        android:layout_below="@id/btn_register" />

    <com.mobisoft.searchlibrary.IconCenterEditText
        android:id="@+id/icet_search"
        style="@style/StyleEditText"
        android:layout_below="@id/icet_search2" />

    <Button
        android:id="@+id/btn_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icet_search"
        android:text="TABLayout！" />

    <Button
        android:id="@+id/btn_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_tab"
        android:text="支付宝授权！"
        android:onClick="alipay"/>
    <com.mobisoft.mbsmsgview.MBSMsgView
        android:id="@+id/hebo_msg_tip"
        xmlns:mv="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:textColor="#ffffff"
        android:textSize="11.5sp"
        android:visibility="visible"
        android:layout_below="@id/btn_alipay"
        mv:mbs_mv_backgroundColor="#FD481F"
        mv:mbs_mv_isRadiusHalfHeight="true"
        mv:mbs_mv_strokeColor="#ffffff"
        mv:mbs_mv_strokeWidth="1dp"/>
    <ViewStub
        android:id="@+id/view_stup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hebo_msg_tip"
        android:layout="@layout/view_stup_tree_layout" />

</RelativeLayout>
